library(dagitty)
dag <-dagitty("dag{
Ancestor -> HostGenetics -> Cirrhosis -> Phenotype
Ancestor -> Phenotype
HostGenetics -> Phenotype
Cirrhosis <- Sex -> Phenotype
Cirrhosis <- Age -> Phenotype
Cirrhosis <- IFN -> Phenotype
HostGenetics -> VL
IFN -> VL -> Phenotype
